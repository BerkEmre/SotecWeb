@using System.Data
@using sotec_ticaret.Helpers
@{
    ViewBag.Title = "Tedarikçiler";

    DataTable dt_tedarikciler = SQL.get("SELECT * FROM tedarikciler WHERE silindi = 0");
}
@section style
{
    <link rel="stylesheet" href="~/admin_template/vendor/dropify/css/dropify.min.css">
}
@section script
{
    <script src="~/admin_template/assets/js/pages/ui/dialogs.js"></script>
    <script src="~/admin_template/vendor/dropify/js/dropify.min.js"></script>
    <script>
        function tedarikci_sil(tedarikci_id) {
            swal({
                title: "Silmek istediğinizden emin misiniz?",
                text: "Silinen tedarikçi geri getirilemez!",
                type: "warning",
                showCancelButton: true,
                confirmButtonClass: "btn-danger",
                confirmButtonText: "Evet, sil!",
                cancelButtonText: "Hayır",
                closeOnConfirm: false
            },
                function () {
                    window.location = "/Home/tedarikciSil?tedarikci_id=" + tedarikci_id;
                });
        }
    </script>
}

<div class="row clearfix">
    @{ if (Request.Params["hata"] != null)
        {<div class="alert alert-danger col-md-12" role="alert">@Request.Params["hata"]</div>} }
    @{ if (Request.Params["tepki"] != null)
        {
            if (Request.Params["tepki"].ToString() == "1")
            { <div class="alert alert-success col-md-12" role="alert">Tebrikler, yeni tedarikçi eklendi...</div> }
            if (Request.Params["tepki"].ToString() == "2")
            { <div class="alert alert-success col-md-12" role="alert">Tebrikler, tedarikçi güncellendi...</div> }
            if (Request.Params["tepki"].ToString() == "3")
            { <div class="alert alert-info col-md-12" role="alert">Tedarikçi silindi...</div> }

        }
    }
    <div class="col-lg-12">
        <div class="card">
            <div class="header">
                <div class="pull-right">
                    <a href="javascript:void(0);" class="btn btn-sm btn-primary" data-toggle="modal" data-target="#addcontact"><i class="fa fa-plus"></i> Yeni Tedarikçi</a>
                </div>
            </div>
            <div class="body">
                <div class="table-responsive check-all-parent">
                    <table class="table table-custom table-hover m-b-0 c_list">
                        <thead>
                            <tr>
                                <th>Tedarikçi</th>
                                <th>Ad Soyad</th>
                                <th>EMail</th>
                                <th>Telefon</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (DataRow dr_item in dt_tedarikciler.Rows)
                            {
                            <tr>
                                <td>@dr_item["tedarikci"]</td>
                                <td><p class="c_name">@dr_item["ad_soyad"]</p></td>
                                <td>@dr_item["mail"]</td>
                                <td><span class="phone"><i class="fa fa-phone m-r-10"></i>@dr_item["telefon"]</span></td>
                                <td>
                                    <a href="javascript:void(0);" class="btn btn-sm btn-default" data-toggle="modal" data-target="#tedarikci_duzenle_@dr_item["tedarikci_id"]"><i class="fa fa-edit"></i></a>
                                    <button onclick="tedarikci_sil(@dr_item["tedarikci_id"])" class="btn btn-danger" title="Delete" type="button"><i class="fa fa-trash-o"></i></button>
                                </td>
                            </tr>

                                <div class="modal fade" id="tedarikci_duzenle_@dr_item["tedarikci_id"]" tabindex="-1" role="dialog">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content">
                                            <form action="/Home/tedarikciDuzenle" method="post">
                                                <div class="modal-header">
                                                    <h6 class="title" id="defaultModalLabel">Tedarikçi Düzenle</h6>
                                                </div>
                                                <div class="modal-body">
                                                    <div class="row clearfix">
                                                        <input name="tedarikci_id" type="hidden" value="@dr_item["tedarikci_id"]" />
                                                        <div class="col-6">
                                                            <div class="form-group">
                                                                <label class="control-label">Tedarikçi</label>
                                                                @Html.TextBox("tedarikci", dr_item["tedarikci"], new { @type = "text", @class = "form-control", @placeholder = "Tedarikçi", @autocomplete = "off" })
                                                            </div>
                                                        </div>
                                                        <div class="col-6">
                                                            <div class="form-group">
                                                                <label class="control-label">Ad Soyad</label>
                                                                @Html.TextBox("ad_soyad", dr_item["ad_soyad"], new { @type = "text", @class = "form-control", @placeholder = "Ad Soyad", @autocomplete = "off" })
                                                            </div>
                                                        </div>
                                                        <div class="col-6">
                                                            <div class="form-group">
                                                                <label class="control-label">Telefon</label>
                                                                @Html.TextBox("telefon", dr_item["telefon"], new { @type = "tel", @class = "form-control", @placeholder = "Telefon", @autocomplete = "off" })
                                                            </div>
                                                        </div>
                                                        <div class="col-6">
                                                            <div class="form-group">
                                                                <label class="control-label">E-Mail</label>
                                                                @Html.TextBox("mail", dr_item["mail"], new { @type = "mail", @class = "form-control", @placeholder = "E-Mail", @autocomplete = "off" })
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="submit" class="btn btn-primary">Ekle</button>
                                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">İptal</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="addcontact" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            @using (Html.BeginForm("tedarikciEkle", "Home", FormMethod.Post))
            {
                <div class="modal-header">
                    <h6 class="title" id="defaultModalLabel">Tedarikçi Ekle</h6>
                </div>
                <div class="modal-body">
                    <div class="row clearfix">
                        <div class="col-6">
                            <div class="form-group">
                                <label class="control-label">Tedarikçi</label>
                                @Html.TextBox("tedarikci", null, new { @type = "text", @class = "form-control", @placeholder = "Tedarikçi", @autocomplete = "off" })
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <label class="control-label">Ad Soyad</label>
                                @Html.TextBox("ad_soyad", null, new { @type = "text", @class = "form-control", @placeholder = "Ad Soyad", @autocomplete = "off" })
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <label class="control-label">Telefon</label>
                                @Html.TextBox("telefon", null, new { @type = "tel", @class = "form-control", @placeholder = "Telefon", @autocomplete = "off" })
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <label class="control-label">E-Mail</label>
                                @Html.TextBox("mail", null, new { @type = "mail", @class = "form-control", @placeholder = "E-Mail", @autocomplete = "off" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Ekle</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">İptal</button>
                </div>
            }
        </div>
    </div>
</div>