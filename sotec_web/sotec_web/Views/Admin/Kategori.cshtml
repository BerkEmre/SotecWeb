<div class="modal fade" id="kategori_ekle" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            @using (Html.BeginForm("kategoriEkle", "Admin", FormMethod.Post))
            {
                <input type="hidden" name="kategori_tipi_parametre_id" value="@kategori_tipi_parametre_id" />
                <div class="modal-header">
                    <h6 class="title" id="defaultModalLabel">Kategori Ekle</h6>
                </div>
                <div class="modal-body">
                    <div class="row clearfix">
                        <div class="col-6">
                            <div class="form-group">
                                <label class="control-label">Kategori</label>
                                @Html.TextBox("kategori", null, new { @type = "text", @class = "form-control", @placeholder = "Ad", @autocomplete = "off" })
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <label class="control-label">Üst Kategori</label>
                                <select name="ust_kategori_id" class="form-control">
                                    <option value="0">Ana Kategori</option>
                                    @foreach (DataRow dr in dt_kategoriler_all.Rows)
                                    {
                                        <option value="@dr["kategori_id"]">@dr["kategori"]</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Ekle</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">İptal</button>
                </div>
            }
        </div>
    </div>
</div>

@foreach (DataRow item in dt_kategoriler_all.Rows)
{
    <div class="modal fade" id="kategori_duzenle_@item["kategori_id"]" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                @using (Html.BeginForm("kategoriDuzenle", "Admin", FormMethod.Post))
                {
                    <input type="hidden" name="kategori_id" value="@item["kategori_id"]" />
                    <input type="hidden" name="kategori_tipi_parametre_id" value="@kategori_tipi_parametre_id" />
                    <div class="modal-header">
                        <h6 class="title" id="defaultModalLabel">Kategori Düzenle</h6>
                    </div>
                    <div class="modal-body">
                        <div class="row clearfix">
                            <div class="col-6">
                                <div class="form-group">
                                    <label class="control-label">Kategori</label>
                                    @Html.TextBox("kategori", item["kategori"], new { @type = "text", @class = "form-control", @placeholder = "Ad", @autocomplete = "off" })
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-group">
                                    <label class="control-label">Üst Kategori</label>
                                    <select name="ust_kategori_id" class="form-control">
                                        <option value="0" @{if (Convert.ToInt32(item["ust_kategori_id"]) == 0) { @("selected")  } }>Ana Kategori</option>
                                        @foreach (DataRow dr in SQL.get("SELECT * FROM kategoriler WHERE silindi = 0 AND kategori_id != " + item["kategori_id"]).Rows)
                                        {
                                            <option value="@dr["kategori_id"]" @{if (Convert.ToInt32(item["ust_kategori_id"]) == Convert.ToInt32(dr["kategori_id"])) { @("selected")  } }>@dr["kategori"]</option>
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Düzenle</button>
                        <button onclick="kategori_sil(@item["kategori_id"])" type="button" class="btn btn-danger">Sil</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">İptal</button>
                    </div>
                }
            </div>
        </div>
    </div>


    <div class="modal fade" id="kategori_dil_@item["kategori_id"]" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                @using (Html.BeginForm("kategoriDil", "Admin", FormMethod.Post))
                {
                    <div class="modal-header">
                        <h6 class="title" id="defaultModalLabel">Kategori Dilleri</h6>
                    </div>
                    <input type="hidden" name="kategori_id" value="@item["kategori_id"]" />
                    <input type="hidden" name="kategori_tipi_parametre_id" value="@kategori_tipi_parametre_id" />
                    <div class="modal-body">
                        <div class="body">
                            <ul class="nav nav-tabs">
                                @{
                                    first = true;
                                    dt_diller_vs = SQL.get("SELECT * FROM diller WHERE silindi = 0 AND varsayilan = 0");
                                }
                                @foreach (DataRow item2 in dt_diller_vs.Rows)
                                {
                                    <li class="nav-item"><a class="nav-link @(first == true ? "active show" : "") " data-toggle="tab" href="#dil_@item2["dil_id"]">@item2["dil"]</a></li>
                                    if (first)
                                    {
                                        first = false;
                                    }
                                }
                            </ul>

                            <div class="tab-content">
                                @{
                                    first = true;
                                    dt_diller_vs = SQL.get("SELECT d.*, dk.kategori FROM diller d LEFT OUTER JOIN dil_kategoriler dk ON dk.dil_id = d.dil_id AND dk.kategori_id = " + item["kategori_id"] + " WHERE d.silindi = 0 AND d.varsayilan = 0");
                                }
                                @foreach (DataRow item2 in dt_diller_vs.Rows)
                                {
                                    <input type="hidden" name="dil_id[]" value="@item2["dil_id"]" />
                                    <div class="tab-pane @(first ? "active show" : "")" id="dil_@item2["dil_id"]">
                                        <h6>@item2["dil"]</h6>
                                        <div class="row clearfix">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label class="control-label">Kategori</label>
                                                    <input name="kategori[]" type="text" class="form-control" placeholder="Kategori" autocomplete="off" value="@item2["kategori"]" />
                                                    <span class="text-muted small">@item["kategori"]</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    if (first)
                                    {
                                        first = false;
                                    }
                                }
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Düzenle</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">İptal</button>
                    </div>
                }
            </div>
        </div>
    </div>
}

