                                                    <a href="javascript:void(0);" data-toggle="modal" data-target="#kategori_duzenle_@item3["kategori_id"]"><i class="fa fa-edit"></i></a>
                                                    <a href="javascript:void(0);" data-toggle="modal" data-target="#kategori_dil_@item3["kategori_id"]"><i class="fa fa-flag"></i></a>
                                                    <ul>
                                                        @foreach (DataRow item4 in SQL.get("SELECT * FROM kategoriler WHERE silindi = 0 AND ust_kategori_id = " + item3["kategori_id"]).Rows)
                                                        {
                                                            <li>
                                                                @item4["kategori"]
                                                                <a href="javascript:void(0);" data-toggle="modal" data-target="#kategori_duzenle_@item4["kategori_id"]"><i class="fa fa-edit"></i></a>
                                                                <a href="javascript:void(0);" data-toggle="modal" data-target="#kategori_dil_@item4["kategori_id"]"><i class="fa fa-flag"></i></a>
                                                                <ul>
                                                                    @foreach (DataRow item5 in SQL.get("SELECT * FROM kategoriler WHERE silindi = 0 AND ust_kategori_id = " + item4["kategori_id"]).Rows)
                                                                    {
                                                                        <li>
                                                                            @item5["kategori"]
