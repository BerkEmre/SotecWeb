@using sotec_firma.Helpers
@using System.Data
@{
    string currentAction = Convert.ToString(HttpContext.Current.Request.RequestContext.RouteData.Values["Action"]);
    DataRow dr_kullanici = SQL.get("SELECT * FROM kullanicilar WHERE kullanici_id = " + Session["kullanici_id"]).Rows[0];

    DataTable dt_diller = SQL.get("SELECT * FROM diller WHERE silindi = 0");
}
<!doctype html>
<html lang="tr">
<head>
    <title>@ViewBag.Title | SotecWeb</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <link rel="icon" href="favicon.ico" type="image/x-icon">

    <link rel="stylesheet" href="~/admin_src/vendor/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/admin_src/vendor/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/admin_src/assets/css/main.css">
    <link rel="stylesheet" href="~/admin_src/assets/css/color_skins.css">
    <link rel="stylesheet" href="~/admin_src/vendor/sweetalert/sweetalert.css" />
    @RenderSection("style", false)
</head>
<body class="theme-green">
    <div class="page-loader-wrapper">
        <div class="loader">
            <div class="m-t-30"><img src="~/admin_src/images/logo-white.png" height="48"></div>
            <p>Lütfen bekleyin...</p>
        </div>
    </div>
    <div class="overlay"></div>
    <div id="wrapper">
        <nav class="navbar navbar-fixed-top">
            <div class="container-fluid">
                <div class="navbar-left">
                    <div class="navbar-btn">
                        <button type="button" class="btn-toggle-offcanvas"><i class="lnr lnr-menu fa fa-bars"></i></button>
                    </div>
                    <a href="javascript:void(0);" class="icon-menu btn-toggle-fullwidth"><i class="fa fa-arrow-left"></i></a>
                </div>
                <div class="navbar-right">
                    <div id="navbar-menu">
                        <ul class="nav navbar-nav">
                            <li><a href="@Url.Action("kullaniciCikis", "Admin")" class="icon-menu"><i class="icon-power"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>

        <div id="left-sidebar" class="sidebar">
            <div class="navbar-brand">
                <a href="@Url.Action("Index", "Admin")"><img src="~/admin_src/images/logo-black.png" class="img-fluid"></a>
                <button type="button" class="btn-toggle-offcanvas btn btn-sm btn-default float-right"><i class="lnr lnr-menu fa fa-chevron-circle-left"></i></button>
            </div>
            <div class="sidebar-scroll">
                <div class="user-account">
                    <div class="dropdown">
                        <span>Hoşgeldin,</span>
                        <a href="javascript:void(0);" class="dropdown-toggle user-name" data-toggle="dropdown"><strong>@(dr_kullanici["ad"] + " " + dr_kullanici["soyad"])</strong></a>
                        <ul class="dropdown-menu dropdown-menu-right account">
                            <li><a href="@Url.Action("Profil", "Admin")"><i class="icon-user"></i> Profilim</a></li>
                            <li class="divider"></li>
                            <li><a href="@Url.Action("kullaniciCikis", "Admin")"><i class="icon-power"></i> Çıkış</a></li>
                        </ul>
                    </div>
                </div>
                <nav id="left-sidebar-nav" class="sidebar-nav">
                    <ul id="main-menu" class="metismenu">
                        <li class="@(currentAction == "Index" ? "active" : "")"><a href="@Url.Action("Index", "Admin")"><i class="icon-home"></i><span>Genel Bakış</span></a></li>
                        @if (Convert.ToInt32(dr_kullanici["kullanici_tipi_parametre_id"]) == 1 || Convert.ToInt32(dr_kullanici["kullanici_tipi_parametre_id"]) == 5)
                        {
                            <li class="@(currentAction == "Urun" ? "active" : "")@(currentAction == "UrunVaryasyon" ? "active" : "")@(currentAction == "UrunOzellik" ? "active" : "")">
                                <a href="#urun" class="has-arrow"><i class="icon-puzzle"></i><span>Ürünler</span></a>
                                <ul>
                                    <li><a href="@Url.Action("Urun", "Admin")">Ürünler</a></li>
                                    <li><a href="@Url.Action("UrunOzellik", "Admin")">Ürün Özellikleri</a></li>
                                    <li><a href="@Url.Action("UrunVaryasyon", "Admin")">Ürün Varyasyonları</a></li>
                                </ul>
                            </li>
                        }
                        @if (Convert.ToInt32(dr_kullanici["kullanici_tipi_parametre_id"]) == 1 || Convert.ToInt32(dr_kullanici["kullanici_tipi_parametre_id"]) == 5)
                        {
                            <li class="@(currentAction == "Kategori" ? "active" : "")">
                                <a href="#haber" class="has-arrow"><i class="icon-list"></i><span>Kategoriler</span></a>
                                <ul>
                                    <li><a href="@Url.Action("Kategori", "Admin", new { id = 18 })">Blog</a></li>
                                    <li><a href="@Url.Action("Kategori", "Admin", new { id = 17 })">Haber</a></li>
                                    <li><a href="@Url.Action("Kategori", "Admin", new { id = 16 })">Ürün</a></li>
                                </ul>
                            </li>
                        }
                        @if (Convert.ToInt32(dr_kullanici["kullanici_tipi_parametre_id"]) == 1 || Convert.ToInt32(dr_kullanici["kullanici_tipi_parametre_id"]) == 5)
                        {
                            <li class="@(currentAction == "Blog" ? "active" : "")"><a href="@Url.Action("Blog", "Admin")"><i class="icon-book-open"></i><span>Blog Yazıları</span></a></li>
                        }
                        @if (Convert.ToInt32(dr_kullanici["kullanici_tipi_parametre_id"]) == 1 || Convert.ToInt32(dr_kullanici["kullanici_tipi_parametre_id"]) == 5)
                        {
                            <li class="@(currentAction == "Haber" ? "active" : "")"><a href="@Url.Action("Haber", "Admin")"><i class="icon-globe-alt"></i><span>Haberler</span></a></li>
                        }
                        @if (Convert.ToInt32(dr_kullanici["kullanici_tipi_parametre_id"]) == 1 || Convert.ToInt32(dr_kullanici["kullanici_tipi_parametre_id"]) == 5)
                        {
                            <li class="@(currentAction == "Hizmet" ? "active" : "")"><a href="@Url.Action("Hizmet", "Admin")"><i class="icon-energy"></i><span>Hizmetler</span></a></li>
                        }
                        @if (Convert.ToInt32(dr_kullanici["kullanici_tipi_parametre_id"]) == 1)
                        {
                            <li class="@(currentAction == "SiteBilgileri" ? "active" : "")">
                                <a href="#site_bilgileri" class="has-arrow"><i class="icon-settings"></i><span>Site Bilgileri</span></a>
                                <ul>
                                    @foreach (DataRow item in dt_diller.Rows)
                                    {
                                        <li><a href="@Url.Action("SiteBilgileri", "Admin", new { id = item["dil_id"] })">@item["dil"]</a></li>
                                    }
                                </ul>
                            </li>
                        }
                        @if (Convert.ToInt32(dr_kullanici["kullanici_tipi_parametre_id"]) == 1)
                        {
                            <li class="@(currentAction == "Slider" ? "active" : "")">
                                <a href="#dil" class="has-arrow"><i class="icon-directions"></i><span>Slider</span></a>
                                <ul>
                                    @foreach (DataRow item in dt_diller.Rows)
                                    {
                                        <li><a href="@Url.Action("Slider", "Admin", new { id = item["dil_id"] })">@item["dil"]</a></li>
                                    }
                                </ul>
                            </li>
                        }
                        @if (Convert.ToInt32(dr_kullanici["kullanici_tipi_parametre_id"]) == 1)
                        {
                            <li class="@(currentAction == "Karo" ? "active" : "")">
                                <a href="#dil" class="has-arrow"><i class="icon-film"></i><span>Karo</span></a>
                                <ul>
                                    @foreach (DataRow item in dt_diller.Rows)
                                    {
                                        <li><a href="@Url.Action("Karo", "Admin", new { id = item["dil_id"] })">@item["dil"]</a></li>
                                    }
                                </ul>
                            </li>
                        }
                        @if (Convert.ToInt32(dr_kullanici["kullanici_tipi_parametre_id"]) == 1)
                        {
                            <li class="@(currentAction == "Mesaj" ? "active" : "")"><a href="@Url.Action("Mesaj", "Admin")"><i class="icon-envelope-letter"></i><span>Mesajlar</span></a></li>
                        }
                        @if (Convert.ToInt32(dr_kullanici["kullanici_tipi_parametre_id"]) == 1)
                        {
                            <li class="@(currentAction == "Dil" ? "active" : "")"><a href="@Url.Action("Dil", "Admin")"><i class="icon-bubble"></i><span>Diller</span></a></li>
                        }
                        @if (Convert.ToInt32(dr_kullanici["kullanici_tipi_parametre_id"]) == 1)
                        {
                            <li class="@(currentAction == "Kullanici" ? "active" : "")"><a href="@Url.Action("Kullanici", "Admin")"><i class="icon-user"></i><span>Kullanıcılar</span></a></li>
                        }
                    </ul>
                </nav>
            </div>
        </div>

        <div id="main-content">
            <div class="block-header">
                <div class="row clearfix">
                    <div class="col-md-6 col-sm-12">
                        <h2>@ViewBag.Title</h2>
                    </div>
                    <div class="col-md-6 col-sm-12 text-right">
                        <ul class="breadcrumb">
                            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Admin")"><i class="icon-home"></i></a></li>
                            <li class="breadcrumb-item">@ViewBag.Title</li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="container-fluid">
                @RenderBody()
            </div>
        </div>

    </div>

    <script src="~/admin_src/assets/bundles/libscripts.bundle.js"></script>
    <script src="~/admin_src/assets/bundles/vendorscripts.bundle.js"></script>
    <script src="~/admin_src/assets/bundles/mainscripts.bundle.js"></script>
    <script src="~/admin_src/vendor/sweetalert/sweetalert.min.js"></script><!-- SweetAlert Plugin Js -->
    @RenderSection("script", false)
</body>
</html>