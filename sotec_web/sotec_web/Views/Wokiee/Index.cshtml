                                @MvcHtmlString.Create((dr_karo_item["buton"].ToString().Length <= 0 ? "" : "<div class='tt-description'><div class='tt-description-wrapper'><div class='tt-background'></div><div class='tt-title-small'>" + dr_karo_item["buton"] + "</div></div></div>"))
                            </a>
