@using System.Data
@using sotec_firma.Helpers
@using System.Configuration
@{
    ViewBag.Title = "";

    string lang = Request.Cookies.Get("MultiLanguageExample").Value;
    DataTable dt_dil = SQL.get("SELECT * FROM diller WHERE silindi = 0 AND kisa_kod = '" + lang + "'");
    if (dt_dil.Rows.Count <= 0) { dt_dil = SQL.get("SELECT * FROM diller WHERE silindi = 0 AND varsayilan = 1"); }
    DataRow dr_dil = dt_dil.Rows[0];

    DataTable dt_slider = SQL.get("SELECT * FROM slider WHERE silindi = 0 AND dil_id = " + dr_dil["dil_id"]);
    DataTable dt_karo = SQL.get("SELECT * FROM karolar WHERE silindi = 0 AND dil_id = " + dr_dil["dil_id"]);
    DataTable dt_one_cikan_urunler = SQL.get("SELECT u.stok_kodu, u.urun_id, u.fiyat, urun_adi = ISNULL(du.urun_adi, u.urun_adi), aciklama = ISNULL(du.aciklama, u.aciklama), resim = ISNULL((SELECT TOP 1 ur1.resim FROM urun_resimleri ur1 WHERE ur1.silindi = 0 AND ur1.urun_id = u.urun_id AND sira = (SELECT MIN(ur2.sira) FROM urun_resimleri ur2 WHERE ur2.silindi = 0 AND ur2.urun_id = u.urun_id)), '')  FROM urunler u LEFT OUTER JOIN dil_urunler du ON du.urun_id = u.urun_id AND du.silindi = 0 AND du.dil_id = " + dr_dil["dil_id"] + " WHERE u.silindi = 0 AND u.one_cikan = 1");
    DataTable dt_son_hizmetler = SQL.get("SELECT h.hizmet_id, h.gorsel, baslik = ISNULL(dh.baslik, h.baslik), yazi = ISNULL(dh.yazi, h.yazi) FROM hizmetler h LEFT OUTER JOIN dil_hizmetler dh ON dh.hizmet_id = h.hizmet_id AND dh.silindi = 0 AND dh.dil_id = " + dr_dil["dil_id"] + " WHERE h.silindi = 0");
    DataTable dt_son_bloglar = SQL.get("SELECT TOP 3 b.blog_id, b.gorsel, baslik = ISNULL(db.baslik, b.baslik), yazi = ISNULL(db.yazi, b.yazi), ad_soyad = k.ad + ' ' + k.soyad, b.kayit_tarihi  FROM bloglar b INNER JOIN kullanicilar k ON k.kullanici_id = b.kaydeden_kullanici_id LEFT OUTER JOIN dil_bloglar db ON db.blog_id = b.blog_id AND db.silindi = 0 AND db.dil_id = " + dr_dil["dil_id"] + " WHERE b.silindi = 0 ORDER by b.blog_id DESC");
}

<div class="container-indent nomargin">
    <div class="container-fluid">
        <div class="row">
            <div class="slider-revolution revolution-default">
                <div class="tp-banner-container">
                    <div class="tp-banner revolution">
                        <ul>
                            @foreach (DataRow dr_slider_item in dt_slider.Rows)
                            {
                                <li data-thumb="/admin_src/images/sliders/buyuk/@dr_slider_item["resim"]" data-transition="fade" data-slotamount="1" data-masterspeed="1000" data-saveperformance="off" data-title="Slide">
                                    <img src="~/admin_src/images/sliders/buyuk/@dr_slider_item["resim"]" alt="@dr_slider_item["baslik"]" data-bgposition="center center" data-bgfit="contain" data-bgrepeat="no-repeat">
                                    <div class="tp-caption tp-caption1 lft stb"
                                         data-x="center"
                                         data-y="center"
                                         data-hoffset="0"
                                         data-voffset="0"
                                         data-speed="600"
                                         data-start="900"
                                         data-easing="Power4.easeOut"
                                         data-endeasing="Power4.easeIn">
                                        @MvcHtmlString.Create((dr_slider_item["baslik"].ToString().Length <= 0 ? "" : "<div class='tp-caption1-wd-1 tt-white-color'>" + dr_slider_item["baslik"] + "</div>"))
                                        @MvcHtmlString.Create((dr_slider_item["yazi"].ToString().Length <= 0 ? "" : "<div class='tp-caption1-wd-2 tt-white-color'>" + dr_slider_item["yazi"] + "</div>"))
                                        @MvcHtmlString.Create((dr_slider_item["yazi"].ToString().Length <= 0 ? "" : "<div class='tp-caption1-wd-3 tt-white-color'>" + dr_slider_item["alt_yazi"] + "</div>"))
                                        @MvcHtmlString.Create((dr_slider_item["yazi"].ToString().Length <= 0 ? "" : "<div class='tp-caption1-wd-4'><a href='" + dr_slider_item["link"] + "' class='btn btn-xl' data-text='" + dr_slider_item["buton"] + "'>" + dr_slider_item["buton"] + "</a></div>"))
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container-indent0">
    <div class="container-fluid">
        <div class="row tt-layout-promo-box">
            <div class="col-sm-12 col-md-12">
                <div class="row clearfix">
