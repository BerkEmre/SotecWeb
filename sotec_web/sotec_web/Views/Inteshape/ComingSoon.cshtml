@using System.Data
@using sotec_firma.Helpers
@{
    ViewBag.Title = "ComingSoon";

    string currentAction = Convert.ToString(HttpContext.Current.Request.RequestContext.RouteData.Values["Action"]);

    string lang = Request.Cookies.Get("MultiLanguageExample").Value;

    DataTable dt_dil = SQL.get("SELECT * FROM diller WHERE silindi = 0 AND kisa_kod = '" + lang + "'");
    if (dt_dil.Rows.Count <= 0) { dt_dil = SQL.get("SELECT * FROM diller WHERE silindi = 0 AND varsayilan = 1"); }
    DataRow dr_dil = dt_dil.Rows[0];

    DataRow dr_site_bilgileri = SQL.get("SELECT * FROM site_bilgileri WHERE dil_id = " + dr_dil["dil_id"]).Rows[0];

    DataTable dt_urun_kategorileri = SQL.get("SELECT k.kategori_id, kategori = ISNULL(dk.kategori, k.kategori) FROM kategoriler k LEFT OUTER JOIN dil_kategoriler dk ON dk.kategori_id = k.kategori_id AND dk.silindi = 0 AND dk.dil_id = " + dr_dil["dil_id"] + " WHERE k.silindi = 0 AND k.ust_kategori_id = 0 AND k.kategori_tipi_parametre_id = 16");
    DataTable dt_diller = SQL.get("SELECT * FROM diller WHERE silindi = 0 AND dil_durumu_parametre_id = 27");
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Sizin İçin Hazırlanıyoruz</title>
    <meta name="keywords" content="HTML5 Template">
    <meta name="description" content="">
    <meta name="author" content="sotecmedia.com">
    <link rel="shortcut icon" href="favicon.ico">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="~/wokiee_src/css/theme.css">
</head>
<body>
    <div id="tt-pageContent">
        <div class="tt-coming-soon">
            <div class="container">
                <div class="row	justify-content-center">
                    <div class="col-md-8 tt-coming-soon-content">
                        <a class="tt-logo" href=""><img class="tt-retina" src="~/admin_src/images/site_logo/@dr_site_bilgileri["logo"]" alt=""></a>
                        <h1 class="tt-title">Yakında Geliyoruz!</h1>
                        <div class="description">
                            <address>
                                @MvcHtmlString.Create((dr_site_bilgileri["adres"].ToString().Length <= 0 ? "" : "<p><span>" + sotec_web.Resources.Dil.ADRES + ": </span>" + dr_site_bilgileri["adres"] + "</p>"))
                                @MvcHtmlString.Create((dr_site_bilgileri["telefon"].ToString().Length <= 0 ? "" : "<p><span>" + sotec_web.Resources.Dil.TELEFON + ": </span>" + dr_site_bilgileri["telefon"] + "</p>"))
                                @MvcHtmlString.Create((dr_site_bilgileri["gsm"].ToString().Length <= 0 ? "" : "<p><span>" + sotec_web.Resources.Dil.GSM + ": </span>" + dr_site_bilgileri["gsm"] + "</p>"))
                                @MvcHtmlString.Create((dr_site_bilgileri["fax"].ToString().Length <= 0 ? "" : "<p><span>" + sotec_web.Resources.Dil.FAX + ": </span>" + dr_site_bilgileri["fax"] + "</p>"))
                                @MvcHtmlString.Create((dr_site_bilgileri["whatsapp"].ToString().Length <= 0 ? "" : "<p><span>" + sotec_web.Resources.Dil.WHATSAPP + ": </span>" + dr_site_bilgileri["whatsapp"] + "</p>"))
                                @MvcHtmlString.Create((dr_site_bilgileri["calisma_saatleri"].ToString().Length <= 0 ? "" : "<p><span>" + sotec_web.Resources.Dil.ÇALIŞMA_SAATLERİ + ": </span>" + dr_site_bilgileri["calisma_saatleri"] + "</p>"))
                                @MvcHtmlString.Create((dr_site_bilgileri["email"].ToString().Length <= 0 ? "" : "<p><span>" + sotec_web.Resources.Dil.E_MAİL + ": </span> <a href='mailto: " + dr_site_bilgileri["email"] + "'>" + dr_site_bilgileri["email"] + "</a></p>"))
                            </address>
                        </div>
                    </div>
                </div>
            </div>
            <div class="coming-soon-bottom">
                <p>
                    &copy; <a href="http://sotecmedia.com" target="_blank">SotecMedia</a> @DateTime.Now.Year. @sotec_web.Resources.Dil.Tüm_Hakları_Saklıdır
                </p>
                <ul class="tt-social-icon">
                    @(MvcHtmlString.Create(dr_site_bilgileri["facebook"].ToString().Length <= 0 ? "" : "<li><a class='icon-g-64' target='_blank' href='" + dr_site_bilgileri["facebook"] + "'></a></li>"))
                    @(MvcHtmlString.Create(dr_site_bilgileri["twitter"].ToString().Length <= 0 ? "" : "<li><a class='icon-h-58' target='_blank' href='" + dr_site_bilgileri["twitter"] + "'></a></li>"))
                    @(MvcHtmlString.Create(dr_site_bilgileri["instagram"].ToString().Length <= 0 ? "" : "<li><a class='icon-g-67' target='_blank' href='" + dr_site_bilgileri["instagram"] + "'></a></li>"))
                    @(MvcHtmlString.Create(dr_site_bilgileri["youtube"].ToString().Length <= 0 ? "" : "<li><a class='icon-g-76' target='_blank' href='" + dr_site_bilgileri["youtube"] + "'></a></li>"))
                    @(MvcHtmlString.Create(dr_site_bilgileri["linkedin"].ToString().Length <= 0 ? "" : "<li><a class='icon-g-68' target='_blank' href='" + dr_site_bilgileri["linkedin"] + "'></a></li>"))
                </ul>
            </div>
        </div>
    </div>
    <script src="~/wokiee_src/external/jquery/jquery.min.js"></script>
    <script src="~/wokiee_src/external/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/wokiee_src/external/lazyLoad/lazyload.min.js"></script>
    <script src="~/wokiee_src/js/main.js"></script>
</body>
</html>

