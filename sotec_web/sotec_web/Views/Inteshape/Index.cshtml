                                    </div>
                                    <div class="sx-post-text">
                                        @{ yazi = rRemScript.Replace(dr_blog_item["yazi"].ToString(), String.Empty);}
                                        <p>@MvcHtmlString.Create(SQL.StripHTML(yazi.Substring(0, yazi.Length < 100 ? yazi.Length : 100)))...</p>
                                    </div>
                                    <div class="clearfix">
