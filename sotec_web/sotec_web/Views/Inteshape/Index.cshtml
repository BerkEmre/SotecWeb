                    </div>
                </div>
            </div>
            <div class="section-content">
                <div class="row number-block-three-outer justify-content-center">
                    @foreach (DataRow dr_urun_item in dt_one_cikan_urunler.Rows)
                    {
                        <div class="col-xl-3 col-lg-4 col-md-6 col-sm-12 m-b30">
                            <div class="number-block-three slide-ani-top">
                                <div class="sx-media">
                                    <img src="~/admin_src/images/urun/kucuk/@dr_urun_item["resim"]" alt="">
                                </div>
                                <div class="figcaption bg-gray  p-a30">
                                    <h4 class="m-tb0"><a href="@Url.Action("Product", "Inteshape", new { id = dr_urun_item["urun_id"] })">@dr_urun_item["urun_adi"]</a></h4>
