                            </li>
                        }
        </ul>
        <div class="tp-bannertimer" style="height: 10px; background: rgba(0, 0, 0, 0.15);"></div>
    </div>
</div>
@if (ConfigurationManager.AppSettings["urunler"] == "true")
{
    <div class="section-full mobile-page-padding bg-white p-t80 p-b50 bg-repeat overflow-hide" style="background-image: url(/inteshape_src/images/background/cross-line2.png)">
        <div class="container">
            <div class="section-head">
                <div class="sx-separator-outer separator-center">
                    <div class="sx-separator bg-white bg-moving bg-repeat-x" style="background-image: url(/inteshape_src/images/background/cross-line2.png)">
